# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# Matches multiple files with brace expansion notation

[*.{sh,html,js,ts,css,scss,styl,md,json,yml,pug}]
indent_style = space
indent_size = 2
